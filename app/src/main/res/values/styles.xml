<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorLightBlue</item>
        <item name="colorAccent">@color/colorGrey</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="actionBarSize">75dp</item>
    </style>

    <style name="start_Fragment">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorBlue</item>
        <item name="android:colorForeground">@color/colorGraph3</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ForecastButton" parent="AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">@dimen/container_spacing</item>
        <item name="android:layout_marginRight">@dimen/container_spacing</item>
        <item name="android:layout_marginTop">@dimen/container_spacing</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ChartListHeader" parent="AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">@dimen/chart_list_item_spacing</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ChartContainer" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/container_spacing</item>
        <item name="android:layout_marginLeft">@dimen/container_spacing</item>
        <item name="android:layout_marginRight">@dimen/container_spacing</item>
        <item name="android:paddingTop">@dimen/container_inner_spacing</item>
        <item name="android:paddingBottom">@dimen/container_inner_spacing</item>
    </style>

    <style name="AppTheme.InstantAutoComplete" parent="AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorDarkGrey</item>
    </style>

    <style name="AppTheme.DropDownItem">
        <item name="android:background">@color/colorLightBlue</item>
        <!--<item name = "android:textColorSecondary">@color/colorLightBlue</item>-->
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
