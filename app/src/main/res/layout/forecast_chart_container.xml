<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chartContainer"
    style="@style/AppTheme.ChartContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_height"
    android:background="@color/colorGraph1">

    <LinearLayout
        android:id="@+id/chartInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chartHeader"
            style="@style/ChartListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/now"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/piChart_spacing"
        android:layout_weight="3" />
</LinearLayout>


