<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="@dimen/nav_item_spacing"
    android:paddingRight="@dimen/nav_item_spacing"
    >
    <LinearLayout
        android:id="@+id/nav_item_inner_container"
        android:layout_marginTop="@dimen/nav_item_spacing"
        android:background="@color/colorLightBlue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nav_item_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="19sp"
            android:layout_marginLeft="@dimen/nav_item_spacing"
            />
        <ImageView
            android:id="@+id/nav_add_icon"
            android:visibility="invisible"
            android:src="@drawable/ic_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>

