<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="@dimen/nav_item_spacing"
    android:paddingRight="@dimen/nav_item_spacing">

    <LinearLayout
        android:id="@+id/nav_item_inner_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/nav_item_spacing"
        android:background="@color/colorLightBlue"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/nav_item_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginStart="@dimen/nav_item_spacing"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/favorite_area_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
    </LinearLayout>


</LinearLayout>

