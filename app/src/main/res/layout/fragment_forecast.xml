<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mo.rsiapp.ForecastFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piChartOne"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textHeader"
        android:layout_alignEnd="@+id/textHeader">

    </com.github.mikephil.charting.charts.PieChart>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piChartTwo"
        android:layout_below="@+id/piChartOne"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignRight="@+id/piChartOne"
        android:layout_alignEnd="@+id/piChartOne">
    </com.github.mikephil.charting.charts.PieChart>
    <com.github.mikephil.charting.charts.PieChart
        android:layout_below="@+id/piChartTwo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/piChartThree"
        android:layout_alignRight="@+id/piChartTwo"
        android:layout_alignEnd="@+id/piChartTwo">
    </com.github.mikephil.charting.charts.PieChart>

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="Fel"
        android:visibility="invisible" />

</RelativeLayout>
